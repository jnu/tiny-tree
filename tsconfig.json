{
    "compilerOptions": {
        "outDir": "lib/",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "inlineSources": true,
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.test.ts"]
}
